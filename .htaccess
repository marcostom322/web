# Activar la reescritura de URL
RewriteEngine On
 
# Redirigir todas las solicitudes HTTP a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
 
# Redirigir las solicitudes a archivos específicos si no existen
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L]
 
# Proteger archivos sensibles
<FilesMatch "^(.htaccess|htpasswd|ini|conf|phps|fla|psd|log|sh|sql|bak|git|svn|php~)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
 
# Configurar el tiempo máximo de ejecución del script
<IfModule mod_php7.c>
    php_value max_execution_time 300
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>
 
# Configurar la compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/json application/javascript
</IfModule>
